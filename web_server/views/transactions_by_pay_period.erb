<div class="container">
  <div class="block">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
        Net Cash Variance
        </p>
      </header>
      <div class="card-content">
        <div class="content">
          <% pay_periods
            .group_by { |period| (period.incomes.sum + period.transactions.sum).round(2) }
            .sort_by { |(net, _)| net }
            .each do |net, periods| %>
              <div>
                <strong><%= net %></strong> 
                <ul>
                  <% periods.map(&:date_range).each do |range| %>
                    <li><%= "#{range.begin} - #{range.end}" %></li>
                  <% end %>
                </ul>
              </div>
              <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% pay_periods.each do |period| %>
    <div class="block">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Subtract end by 1 day - range is exclusive
            Pay period: <%= "#{period.date_range.begin} - #{period.date_range.end}" %>
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <table class="table is-fullwidth">
              <thead>
                <th>Total Income</th>
                <th>Total Expenses</th>
                <th>Net Cash</th>
              </thead>
              <tbody>
                <tr>
                  <td><%= period.incomes.sum %></td>
                  <td><%= -1 * period.transactions.sum %></td>
                  <td><%= (period.incomes.sum + period.transactions.sum).round(2) %></td>
                </tr>
              </tbody>
            </table>

            <table class="table is-fullwidth">
              <thead>
                <th>Name</th>
                <th>Amount</th>
                <th>Date</th>
              </thead>
              <tbody>
                <% period.incomes.transactions.each do |transaction| %>
                  <tr>
                    <td><%= transaction.name %></td>
                    <td><%= transaction.amount %></td>
                    <td><%= transaction.date %></td>
                  </tr>
                <% end %>
                <% period.transactions.transactions.each do |transaction| %>
                  <tr>
                    <td><%= transaction.name %></td>
                    <td><%= transaction.amount %></td>
                    <td><%= transaction.date %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

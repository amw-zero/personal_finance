<div class="container">
  <h1 class="title">Create Transaction</h1>
  <form action="/transactions" method="post">
    <div class="field">
      <label class="label" for="name">Name</label>
      <input class="input" name="name" />
    </div>

    <div class="field">
      <label class="label" for="account_id">Account</label>
      <div class="control">
        <div class="select">
          <select id="account_select" name="account_id">
            <% @accounts.each do |a| %>
              <option value="<%= a.id %>"><%= a.name %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label" for="amount">Amount</label>
      <input class="input"name="amount" type="number" step="0.01" />
    </div>

    <div class="field">
      <label class="label" for="currency">Currency</label>
      <input class="input"name="currency" type="text" />
    </div>

    <div class="field">
      <label class="label" for="recurrence_rule">Recurrence rule (iCalendar spec)</label>
      <input class="input"name="recurrence_rule" type="text" />
    </div>

    <button class="button is-primary" type="submit">Create Transaction</input>
  </form>
</div>